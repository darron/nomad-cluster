{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [{
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key` }}",
            "region": "us-west-2",
            "source_ami": "ami-95e1d9a5",
            "instance_type": "c3.large",
            "ssh_username": "ubuntu",
            "ami_name": "nomad-cluster-{{timestamp}}"
            }],

    "provisioners": [{
        "type": "shell",
        "execute_command": "sudo -S sh '{{ .Path }}'",
        "script": "./build.sh"
      }]
}
